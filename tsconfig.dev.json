// TypeScript-Konfiguration f√ºr Entwicklung mit weniger restriktiven Regeln
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "jsx": "react-jsx",
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.stories.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/components/angular/WebConsole.component.ts",
    "src/components/angular/WebConsole.module.ts",
    "src/components/vue/WebConsole.vue",
    "src/components/svelte/WebConsole.svelte"
  ]
}
