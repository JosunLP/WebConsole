{
  "name": "web-console",
  "version": "0.1.0",
  "description": "Eine modulare, vollständig im Browser laufende Konsolen-Bibliothek für moderne Web-Anwendungen",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./angular": {
      "import": "./dist/components/angular/index.js",
      "types": "./dist/components/angular/index.d.ts"
    },
    "./react": {
      "import": "./dist/components/react/index.js",
      "types": "./dist/components/react/index.d.ts"
    },
    "./vue": {
      "import": "./dist/components/vue/index.js",
      "types": "./dist/components/vue/index.d.ts"
    },
    "./svelte": {
      "import": "./dist/components/svelte/index.js",
      "types": "./dist/components/svelte/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:dev": "tsc -p tsconfig.dev.json",
    "build:watch": "vite build --watch",
    "dev": "vite build --watch",
    "serve": "node scripts/serve.js",
    "start": "npm run build && npm run serve",
    "dev:full": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "test": "npm run storybook",
    "test:storybook": "storybook dev -p 6006",
    "demo": "npm run build && npm run serve",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "examples": "npm run serve"
  },
  "keywords": [
    "console",
    "terminal",
    "browser",
    "typescript",
    "angular",
    "react",
    "vue",
    "svelte",
    "web-components"
  ],
  "author": "Web-Console Team",
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-docs": "^9.0.17",
    "@storybook/html-vite": "^9.0.17",
    "@types/node": "^20.19.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "eslint-plugin-storybook": "^9.0.17",
    "http-server": "^14.1.1",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "sass": "^1.89.2",
    "storybook": "^9.0.17",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@angular/core": ">=16.0.0",
    "react": ">=18.0.0",
    "svelte": ">=4.0.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@angular/core": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "svelte": {
      "optional": true
    }
  }
}
